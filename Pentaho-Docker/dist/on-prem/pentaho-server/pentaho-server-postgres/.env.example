# =============================================================================
# Pentaho Server 11 with PostgreSQL 15 - Environment Configuration
# =============================================================================
# Copy this file to .env and customize the values for your environment.
# DO NOT commit .env to version control - it may contain sensitive data.
# =============================================================================

# -----------------------------------------------------------------------------
# Pentaho Server Configuration
# -----------------------------------------------------------------------------
#Pentaho version to be used
PENTAHO_IMAGE_NAME=pentaho/pentaho-server
PENTAHO_VERSION=11.0.0.0-237
INSTALLATION_PATH=/opt/pentaho
PENTAHO_HOME=/home/pentaho

#Override subfolder name
SOFTWARE_OVERRIDE_FOLDER=./softwareOverride
LOG_FOLDER=./logs
CONFIG_FOLDER=./config

#Port number to expose for server (default: 8080, recommended: 8090)
PORT=8090

#Flexera License Server URL (required for EE license activation)
LICENSE_URL=https://your-flexera-license-server-url/request

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
#The version of the database to use
DATABASE_VERSION=15

#The port to expose for the database (default: 5432, recommended: 5433)
DATABASE_PORT=5433

#PostgreSQL superuser credentials (CHANGE THESE IN PRODUCTION!)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_postgres_admin_password

# -----------------------------------------------------------------------------
# Pentaho Database User Credentials (CHANGE THESE IN PRODUCTION!)
# -----------------------------------------------------------------------------
#Jackrabbit (JCR) database credentials
JCR_DB_USER=jcr_user
JCR_DB_PASSWORD=CHANGE_ME_jcr_password

#Quartz scheduler database credentials
QUARTZ_DB_USER=pentaho_user
QUARTZ_DB_PASSWORD=CHANGE_ME_quartz_password

#Hibernate repository database credentials
HIBERNATE_DB_USER=hibuser
HIBERNATE_DB_PASSWORD=CHANGE_ME_hibernate_password

# -----------------------------------------------------------------------------
# Advanced Configuration (usually no changes needed)
# -----------------------------------------------------------------------------
#The database edition to use, if any
DATABASE_EDITION=
#The docker image to use for the database
DOCKER_DATABASE_IMAGE=postgres:${DATABASE_VERSION}
