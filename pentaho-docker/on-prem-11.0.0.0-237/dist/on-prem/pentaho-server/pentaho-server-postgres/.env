#============================================================================
# Pentaho Server 11 with PostgreSQL 17 - Docker Configuration
#============================================================================

#Pentaho version to be used
PENTAHO_IMAGE_NAME=pentaho/pentaho-server
PENTAHO_VERSION=11.0.0.0-237
INSTALLATION_PATH=/opt/pentaho
PENTAHO_HOME=/home/pentaho

#Java configuration
PENTAHO_JAVA_HOME=/opt/java/openjdk
JAVA_HOME=/opt/java/openjdk

#Override subfolder name
SOFTWARE_OVERRIDE_FOLDER=./softwareOverride
LOG_FOLDER=./logs
CONFIG_FOLDER=./config

#Port number to expose for server
PORT=8090
LICENSE_URL=https://flex1826-uat.compliance.flexnetoperations.com/instances/QP5BXJRC2XVM/request

#============================================================================
# PostgreSQL 17 Database Configuration
#============================================================================
DATABASE_VERSION=17
DATABASE_EDITION=
DOCKER_DATABASE_IMAGE=postgres:${DATABASE_VERSION}

#Database credentials (change for production!)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
